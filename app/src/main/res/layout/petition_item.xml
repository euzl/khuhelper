<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_size"
    android:layout_marginVertical="10dp"
    android:background="@drawable/bg_whitebutton_ripple">

    <TextView
        android:id="@+id/tv_petition_titlemessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="제목 : "
        android:textSize="@dimen/noti_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_petition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="제목이 표시됩니다."
        android:textSize="@dimen/noti_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/tv_petition_titlemessage"
        app:layout_constraintTop_toTopOf="@+id/tv_petition_titlemessage" />

    <TextView
        android:id="@+id/tv_petition_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="(충전소 이름)"
        android:textSize="@dimen/noti_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_petition_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_petition_title" />

</androidx.constraintlayout.widget.ConstraintLayout>